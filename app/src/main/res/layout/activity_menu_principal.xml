<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo1"
    tools:context="com.lezapp.tarea.proyectolenguajespmt.app.MenuPrincipal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ingrese número de placa:"
        android:id="@+id/isnt"
        android:textColor="#fff4fe"
        android:textSize="20dp"
        android:singleLine="false"
        android:autoText="true"
        android:layout_below="@+id/titulo"
        android:layout_alignRight="@+id/titulo" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gestión de Datos\n \t\t\t\t\t\t\tPMT"
        android:id="@+id/titulo"
        android:textColor="#fff8f8"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtplaca"
        android:layout_below="@+id/isnt"
        android:layout_alignLeft="@+id/isnt"
        android:layout_marginTop="55dp"
        android:textColorHint="#221090"
        android:background="#fef6fd"
        android:textSize="30dp"
        android:layout_toLeftOf="@+id/btnok" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/btnok"
        android:longClickable="false"
        android:layout_alignTop="@+id/txtplaca"
        android:layout_alignRight="@+id/titulo"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Archivo XML"
        android:id="@+id/btnbuscararchivo"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btnok"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Direccion de XML a Cargar"
        android:id="@+id/lbldireccion"
        android:layout_below="@+id/btnbuscararchivo"
        android:layout_centerHorizontal="true"
        android:textColor="#f7fff3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Direccion\nDe Archivo"
        android:id="@+id/btncargararchivo"
        android:layout_below="@+id/lbldireccion"
        android:layout_alignLeft="@+id/btnbuscararchivo" />

</RelativeLayout>
