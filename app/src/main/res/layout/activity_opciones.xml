<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo2"
    tools:context="com.lezapp.tarea.proyectolenguajespmt.app.Opciones">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Opciones"
        android:id="@+id/titulo"
        android:textColor="#fffdff"
        android:textSize="40dp"
        android:layout_below="@+id/imgfoto"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblplaca"
        android:textColor="#fffef4"
        android:text="placa"
        android:textSize="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Explorando la placa:"
        android:id="@+id/textView"
        android:textColor="#fdf8ed"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="18dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/imgfoto"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="58dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos Generales"
            android:id="@+id/btndatos"
            android:layout_gravity="center_horizontal"
            android:textColor="#fefaff"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Multas"
            android:id="@+id/btnmultas"
            android:layout_gravity="center_horizontal"
            android:textColor="#fbf4e6"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Denuncias"
            android:id="@+id/btndenuncias"
            android:layout_gravity="center_horizontal"
            android:textColor="#f8f3ff"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagos Pendientes"
            android:id="@+id/btnpagospen"
            android:layout_gravity="center_horizontal"
            android:textColor="#f6f8e7"
            android:textSize="20dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/imgfoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/foto6" />


</RelativeLayout>
